<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Schedule"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/colorBackground"
        android:elevation="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:src="@drawable/jainlogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule"
            android:layout_margin="20dp"
            android:textColor="@color/textColor"
            android:textSize="30dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/experiment"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/page1" />

            <ImageView
                android:id="@+id/experiment1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/page2" />

            <ImageView
                android:id="@+id/experiment2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/page3" />
            <ImageView
                android:id="@+id/experiment4"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/page4" />
            <ImageView
                android:id="@+id/experiment5"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/page5" />
            <ImageView
                android:id="@+id/experiment50"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/page50" />
            <ImageView
                android:id="@+id/experiment6"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/page6" />
            <ImageView
                android:id="@+id/experiment7"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/page7" />
            <ImageView
                android:id="@+id/experiment8"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/page8" />
            <ImageView
                android:id="@+id/experiment9"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/page9" />
            <ImageView
                android:id="@+id/experiment10"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/page10" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>